            <h1>
                <a href="https://genialabile.com/" onmouseover="this.style.color='#00ff00'; this.style.textDecoration='underline';" onmouseout="this.style.color='white'; this.style.textDecoration='none';">
                    01. GENiALABILE
                </a>
            </h1>
            <!-- Aggiungi un elemento SCRITTURA -->
            <p>
                <div id="typing-effect"></div>
                <script>
                    // Testo da digitare
                    const text =
                    "PRIMO TESTO Benvenuto su GENiALABILE: Advanced-GPT inspiring multidimensional solutions."
                   
                    "SEC TESTO Benvenuto su GENiALABILE: Advanced-GPT inspiring multidimensional solutions."

                    ;



                    // Configurazione: intervallo tra i caratteri (ms)
                    const typingSpeed = 100; // Velocità di digitazione
                    const startDelay = 6000; // Ritardo iniziale (in ms)

                    // Riferimento all'elemento HTML
                    const typingElement = document.getElementById("typing-effect");

                    // Funzione per simulare la digitazione
                    let index = 0;
                    function typeText() {
                        if (index < text.length) {
                            typingElement.innerHTML += text.charAt(index);
                            index++;
                            setTimeout(typeText, typingSpeed); // Aspetta e digita il prossimo carattere
                        }
                    }
                    // Rimuove il cursore dopo 5 secondi
                    setTimeout(() => {
                        const typingEffect = document.getElementById("typing-effect");
                        typingEffect.classList.add("no-cursor"); // Aggiunge la classe che nasconde il cursore
                    }, 5000); // Cambia 5000 (5 secondi) con il tempo desiderato

                                    document.addEventListener('DOMContentLoaded', function () {
                        const typingEffect = document.querySelector('#typing-effect');
                        const shouldBlink = typingEffect.getAttribute('data-blink') === 'false';
                        
                        if (!shouldBlink) {
                            setTimeout(() => {
                                typingEffect.style.animation = 'none'; // Disabilita animazione
                            }, 30000); // Dopo 30 secondi
                        }
                     });

                    // Avvia l'effetto di digitazione
                    window.onload = typeText; // Inizia quando la pagina è completamente caricata
                </script>


            </p>
            <!-- Aggiungi un elemento SCRITTURA -->


          
